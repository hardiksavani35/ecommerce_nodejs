<!-- Hero Section -->
<section class="bg-gradient-to-r from-blue-500 to-purple-600 text-white py-20">
    <div class="container mx-auto px-4 text-center">
        <h1 class="text-5xl font-bold mb-4">Welcome to ShopHub</h1>
        <p class="text-xl mb-8">Discover amazing products at unbeatable prices</p>
        <a href="/products" class="bg-white text-blue-600 px-8 py-3 rounded-lg font-semibold hover:bg-gray-100 inline-block">Shop Now</a>
    </div>
</section>

<section class="container mx-auto px-4 py-16">
    <h2 class="text-3xl font-bold text-center mb-12">Shop by Category</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <% categories.forEach(category => { %>
            <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition cursor-pointer">
                <div class="h-48 bg-gradient-to-r <%= category.gradient %> flex items-center justify-center">
                    <span class="text-white text-6xl"><%= category.icon %></span>
                </div>
                <div class="p-6">
                    <h3 class="text-xl font-semibold mb-2"><%= category.name %></h3>
                    <p class="text-gray-600"><%= category.description %></p>
                </div>
            </div>
        <% }); %>
    </div>
</section>

